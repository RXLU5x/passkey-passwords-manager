<?xml version="1.0" encoding="UTF-8"?>

<?import components.PasswordField?>
<?import components.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>
<fx:root xmlns="http://javafx.com/javafx/10.0.2-internal" type="javafx.scene.layout.VBox" stylesheets="/css/home/SignIn.css" styleClass="signin" alignment="CENTER_LEFT" spacing="30.0" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <TextFlow>
            <Text styleClass="welcome-back-title" text="Welcome Back!"/>
        </TextFlow>

        <TextFlow>
            <Text styleClass="welcome-back-message" text="Please provide us your credentials."/>
        </TextFlow>
    </VBox>

    <VBox spacing="15.0">
        <TextField fx:id="username" text="Username"/>
        <PasswordField fx:id="passwordField"/>
    </VBox>

    <Button fx:id="signInButton" alignment="CENTER" contentDisplay="CENTER" maxWidth="Infinity" mnemonicParsing="false" textAlignment="CENTER">
        <padding>
            <Insets bottom="10.0" top="10.0"/>
        </padding>
        <graphic>
            <Text text="Sign In" />
        </graphic>
    </Button>
</fx:root>
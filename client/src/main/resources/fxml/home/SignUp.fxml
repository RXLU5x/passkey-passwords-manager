<?xml version="1.0" encoding="UTF-8"?>

<?import components.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<fx:root xmlns="http://javafx.com/javafx/10.0.2-internal" type="javafx.scene.layout.VBox" stylesheets="/css/home/SignUp.css" styleClass="signup" alignment="CENTER_LEFT" spacing="30.0" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <TextFlow>
            <Text styleClass="welcome-title" text="Welcome!" />
        </TextFlow>

        <TextFlow>
            <Text styleClass="welcome-message" text="Please fill in the following form." />
        </TextFlow>
    </VBox>

    <VBox spacing="15.0">
        <HBox alignment="CENTER_LEFT" maxHeight="Infinity" maxWidth="Infinity" spacing="20.0">
            <TextField fx:id="firstName" text="First Name" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="lastName" text="Last Name" HBox.hgrow="ALWAYS"/>
        </HBox>

        <TextField fx:id="email" text="Email" />
        <TextField fx:id="username" text="Username" />
        <PasswordField fx:id="passwordField" />
    </VBox>

    <Button fx:id="signUpButton" alignment="CENTER" contentDisplay="CENTER" maxWidth="Infinity" mnemonicParsing="false" textAlignment="CENTER">
        <padding>
            <Insets bottom="10.0" top="10.0" />
        </padding>
        <graphic>
            <Text text="Sign Up" />
        </graphic>
    </Button>
</fx:root>
<?xml version="1.0" encoding="UTF-8"?>

<?import components.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<fx:root xmlns="http://javafx.com/javafx" type="javafx.scene.layout.VBox" stylesheets="/css/vaults/Account.css" styleClass="account" alignment="CENTER_LEFT" spacing="15.0" fx:id="content" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <TextFlow>
            <Text styleClass="header" text="Hello!"/>
        </TextFlow>

        <TextFlow>
            <Text text="Here you can manage your own account."/>
        </TextFlow>
    </VBox>

    <VBox alignment="CENTER" spacing="20.0">
        <VBox spacing="5.0">
            <TextFlow>
                <Text styleClass="subheader" text="Delete Account"/>
            </TextFlow>

            <TextFlow>
                <Text text="This operation is irreversible and will delete all your stored data." textAlignment="JUSTIFY"/>
            </TextFlow>
        </VBox>

        <TextField fx:id="username" text="Username"/>

        <Button fx:id="delete" alignment="CENTER" contentDisplay="CENTER" maxWidth="Infinity" mnemonicParsing="false" textAlignment="CENTER">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>

            <graphic>
                <Text text="Delete" />
            </graphic>
        </Button>
    </VBox>
</fx:root>
